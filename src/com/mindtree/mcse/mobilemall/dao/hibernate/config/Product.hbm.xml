<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mindtree.mcse.mobilemall.domain">
	<class name="Product" table="product">
		<id name="productId" column="PRODUCTID" unsaved-value="null">
			<generator class="assigned" />
		</id>
		<property name="categoryId" column="CATEGORY" not-null="true" />
		<property name="name" column="NAME" />
		<property name="description" column="DESCN" />
	</class>
</hibernate-mapping>